{
  "buildCommand": "npm run build",
  "outputDirectory": "public",
  "installCommand": "npm install",
  "build": {
    "env": { "NODE_VERSION": "18" }
  },
  "rewrites": [
    {
      "source": "/about",
      "destination": "/index.html"
    },
    {
      "source": "/thoughts",
      "destination": "/blog.html"
    },
    {
      "source": "/thoughts/(.*)",
      "destination": "/blog.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*).html",
      "headers": [
        {
          "key": "Content-Type",
          "value": "text/html; charset=utf-8"
        }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/index.html",
      "destination": "/about",
      "permanent": true
    }
  ]
}